{
  "compilerOptions": {
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "./dist/",
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
  },
  "exclude": [
    "src/timestamp-badges",
    "src/commit-badges",
    "**/*.test.ts",
    "node_modules",
    "layers",
    "dist",
    ".vscode",
    ".serverless"
  ]
}